# EditorConfig for ~/bin scripts
# https://editorconfig.org/
root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Shell scripts: tabs
[*.{sh,bash}]
indent_style = tab
indent_size = 4
tab_width = 4

# Python scripts: spaces
[*.py]
indent_style = space
indent_size = 4

# YAML/JSON: spaces (common convention)
[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

# Markdown: spaces
[*.md]
indent_style = space
indent_size = 2
