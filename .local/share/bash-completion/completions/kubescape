_kubescape_scan_framework()
{
    last_command="kubescape_scan_framework"

    command_aliases=()

    commands=()

    flags=()
    two_word_flags=()
    local_nonpersistent_flags=()
    flags_with_completion=()
    flags_completion=()

    flags+=("--account=")
    two_word_flags+=("--account")
    flags+=("--cache-dir=")
    two_word_flags+=("--cache-dir")
    flags+=("--cluster-name=")
    two_word_flags+=("--cluster-name")
    flags+=("--compliance-threshold=")
    two_word_flags+=("--compliance-threshold")
    flags+=("--controls-config=")
    two_word_flags+=("--controls-config")
    flags+=("--create-account")
    flags+=("--disable-color")
    flags+=("--enable-color")
    flags+=("--exceptions=")
    two_word_flags+=("--exceptions")
    flags+=("--exclude-namespaces=")
