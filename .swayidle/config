idlehint 900

lock "dunstctl set-paused true"
lock "swaylock.sh"

unlock "dunstctl set-paused false"

before-sleep "playerctl pause"
before-sleep "swaylock.sh"

after-resume "swaymsg 'output * dpms on'"

timeout 1800 "swaylock.sh"
timeout 2100 "swaymsg 'output * dpms on'" resume "swaymsg 'output * dpms off'"
