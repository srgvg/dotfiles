{
  "description": "Optimized global permissions for Claude Code based on analyzed usage patterns - more permissive than current settings while maintaining security",
  "permissions": {
    "allow": [
      "_comment_core_tools": "Core Claude Code tools",
      "Edit",
      "View", 
      "MultiEdit",
      "WebFetch",
      "WebSearch",
      "LS",
      "Grep",
      "Glob",
      "Read",
      "Write",
      "Task",
      "TodoWrite",
      "TodoRead",
      
      "_comment_essential_bash": "Essential bash operations seen in all projects",
      "Bash(mkdir:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(pwd)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(touch:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(tree:*)",
      "Bash(which:*)",
      "Bash(file:*)",
      "Bash(stat:*)",
      
      "_comment_safe_file_ops": "Safe file operations (excluding dangerous rm patterns)",
      "Bash(rm:*.tmp)",
      "Bash(rm:*.log)",
      "Bash(rm:*.out)",
      "Bash(rm:-f *.tmp)",
      "Bash(rm:-f *.log)",
      "Bash(rm:-f *.out)",
      "Bash(rmdir:*)",
      
      "_comment_git_safe_ops": "Safe git operations (excluding automatic commits)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git pull:*)",
      "Bash(git add:*)",
      "Bash(git rm:*)",
      "Bash(git check-ignore:*)",
      
      "_comment_development_common": "Common development tools across projects",
      "Bash(make:*)",
      "Bash(env:*)",
      "Bash(export:*)",
      "Bash(timeout:*)",
      "Bash(time:*)",
      "Bash(curl:*)",
      
      "_comment_text_processing": "Text processing utilities",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(wc:*)",
      
      "_comment_process_mgmt": "Process management (safer subset)",
      "Bash(ps:*)",
      "Bash(pgrep:*)",
      "Bash(pkill:claude*)",
      "Bash(pkill:node)",
      "Bash(pkill:go)",
      
      "_comment_archive_ops": "Archive operations",
      "Bash(unzip:*)",
      "Bash(tar:-tf *)",
      "Bash(tar:-xf *)",
      "Bash(gzip:*)",
      "Bash(gunzip:*)",
      
      "_comment_system_info": "System information (read-only)",
      "Bash(df:*)",
      "Bash(du:*)",
      "Bash(free)",
      "Bash(uname:*)",
      "Bash(whoami)",
      "Bash(id)",
      
      "_comment_web_access": "Common web domains",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:stackoverflow.com)",
      
      "_comment_system_specific": "Current system-specific operations",
      "Bash(echo $LOCK_DEFAULT_LOCKSCREEN)",
      "Bash(loginctl list-sessions:*)",
      "Bash(loginctl show-session:*)"
    ],
    "deny": [
      "_comment_security_critical": "Critical security restrictions",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(./config/secrets.*)",
      "Read(./**/secrets/**)",
      "Read(./**/.env*)",
      "Read(~/.ssh/**)",
      "Read(/etc/passwd)",
      "Read(/etc/shadow)",
      
      "_comment_git_security": "Prevent automatic git commits",
      "Bash(git commit:*)",
      "Bash(git commit)",
      "Bash(git push:*)",
      
      "_comment_dangerous_system": "Dangerous system operations",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(rm:-rf /*)",
      "Bash(rm:-rf /)",
      "Bash(rm:-rf ~/*)",
      "Bash(mkfs:*)",
      "Bash(fdisk:*)",
      "Bash(format:*)",
      "Bash(dd:*)",
      "Bash(chmod 777:*)",
      "Bash(chown root:*)",
      
      "_comment_network_dangerous": "Dangerous network operations",
      "Bash(nc:*)",
      "Bash(netcat:*)",
      "Bash(nmap:*)",
      "Bash(telnet:*)",
      
      "_comment_process_dangerous": "Dangerous process operations",
      "Bash(kill:-9 1)",
      "Bash(killall:*)",
      "Bash(pkill:-9:*)"
    ],
    "defaultMode": "acceptEdits",
    "additionalDirectories": [
      "/home/serge/scratch"
    ]
  },
  "model": "opusplan",
  "statusLine": {
    "type": "command",
    "command": "~/.claude/ccstatusline.sh"
  },
  "memory": "CLAUDE.md",
  "autoUpdates": true,
  "preferredNotifChannel": "terminal_bell"
}