{
  "description": "Base permission set for all Claude Code projects - includes essential development tools without automatic git commits",
  "permissions": {
    "allow": [
      "Edit",
      "View", 
      "MultiEdit",
      "WebFetch",
      "WebSearch",
      
      "_comment_file_operations": "Essential file and directory operations",
      "Bash(mkdir:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(pwd)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(touch:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(rmdir:*)",
      "Bash(tree:*)",
      
      "_comment_git_safe": "Git operations excluding automatic commits",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git add:*)",
      "Bash(git rm:*)",
      "Bash(git tag:*)",
      "Bash(git rebase:*)",
      "Bash(git merge:*)",
      "Bash(git stash:*)",
      "Bash(git reset:*)",
      "Bash(git clean:*)",
      "Bash(git check-ignore:*)",
      
      "_comment_git_forbidden": "FORBIDDEN: git commit operations - user must manually approve",
      "_git_commit_note": "git commit operations INTENTIONALLY EXCLUDED for security",
      
      "_comment_process_management": "Process and system utilities",
      "Bash(ps:*)",
      "Bash(pgrep:*)",
      "Bash(pkill:*)",
      "Bash(kill:[0-9]*)",
      "Bash(timeout:*)",
      "Bash(time:*)",
      "Bash(env:*)",
      "Bash(export:*)",
      "Bash(unset:*)",
      
      "_comment_network": "Network and web utilities",
      "Bash(curl:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:docs.anthropic.com)",
      
      "_comment_text_processing": "Text processing utilities",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(wc:*)",
      "Bash(tr:*)",
      
      "_comment_archive": "Archive and compression tools",
      "Bash(tar:*)",
      "Bash(gzip:*)",
      "Bash(gunzip:*)",
      "Bash(zip:*)",
      "Bash(unzip:*)",
      
      "_comment_development": "Basic development utilities",
      "Bash(which:*)",
      "Bash(whereis:*)",
      "Bash(file:*)",
      "Bash(stat:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      
      "_comment_system": "System monitoring",
      "Bash(df:*)",
      "Bash(du:*)",
      "Bash(free:*)",
      "Bash(top)",
      "Bash(htop)",
      "Bash(lsof:*)"
    ],
    "deny": [
      "_comment_security": "Security restrictions for sensitive files",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(./config/secrets.*)",
      "Read(./**/secrets/**)",
      "Read(./**/.env*)",
      
      "_comment_git_security": "Prevent automatic git commit operations",
      "Bash(git commit:*)",
      "Bash(git commit)",
      
      "_comment_dangerous": "Dangerous system operations",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(rm:-rf /*)",
      "Bash(mkfs:*)",
      "Bash(fdisk:*)",
      "Bash(format:*)"
    ],
    "defaultMode": "acceptEdits",
    "additionalDirectories": [
      "/home/serge/scratch"
    ]
  },
  "memory": ".claude/CLAUDE.md",
  "saveSettingsPath": ".claude/settings.json",
  "useLocalSettings": false
}