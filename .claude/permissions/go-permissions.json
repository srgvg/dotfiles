{
  "description": "Go-specific permissions extending base permissions with Go toolchain support",
  "extends": "base-permissions.json",
  "permissions": {
    "allow": [
      "_comment_go_toolchain": "Go language toolchain",
      "Bash(go:*)",
      "Bash(/usr/bin/go:*)",
      "Bash(go*/bin/go:*)",
      "Bash($GOROOT:*)",
      "Bash(GOROOT=*:*)",
      "Bash(GOPATH=*:*)",
      "Bash(CGO_ENABLED=*:*)",
      
      "_comment_go_development": "Go development tools",
      "Bash(gofmt:*)",
      "Bash(golint:*)",
      "Bash(govet:*)",
      "Bash(staticcheck:*)",
      "Bash(golangci-lint:*)",
      
      "_comment_go_testing": "Go testing and coverage",
      "Bash(go test:*)",
      "Bash(go build:*)",
      "Bash(go mod:*)",
      "Bash(go list:*)",
      "Bash(go tool cover:*)",
      "Bash(go tool pprof:*)",
      "Bash(go doc:*)",
      "Bash(go fmt:*)",
      "Bash(go vet:*)",
      "Bash(go generate:*)",
      "Bash(go install:*)",
      "Bash(go clean:*)",
      "Bash(go version)",
      "Bash(go env:*)",
      
      "_comment_go_deps": "Go dependency management",
      "Bash(go get:*)",
      "Bash(go sum:*)",
      "Bash(go mod tidy)",
      "Bash(go mod download)",
      "Bash(go mod verify)",
      "Bash(go mod graph)",
      "Bash(go mod why:*)",
      
      "_comment_go_build": "Go build tools",
      "Bash(make:*)",
      "Bash(make test:*)",
      "Bash(./bin/*:*)",
      "Bash(./*:*)",
      
      "_comment_go_package_managers": "Go package managers and tools",
      "Bash(mise:*)",
      "Bash(gvm:*)",
      
      "_comment_go_docs": "Go documentation",
      "WebFetch(domain:pkg.go.dev)",
      "WebFetch(domain:golang.org)",
      "WebFetch(domain:go.dev)"
    ]
  }
}