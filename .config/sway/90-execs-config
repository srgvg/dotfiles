#
# settings
#

exec --no-startup-id "nmcli radio wifi off" # disable wifi
exec --no-startup-id "rfkill block bluetooth" # disable bluetooth
exec --no-startup-id "nmcli radio wwan off"

#exec_always --no-startup-id "setsbg redisplay"
#
## startup
#

# tray stuff
#
exec_always "pgrep nm-applet || nm-applet --indicator &"
#exec_always "pgrep pasystray || pasystray --debug --notify=all &"
exec_always "pgrep pavucontrol || pavucontrol &"
exec_always "pgrep blueman-applet || blueman-applet &"
exec_always "pgrep -f system-config-printer/applet.py || system-config-printer-applet &"

# desktop stuff
#
exec_always "sleep 3 && $HOME/bin/i3-launch-jobs ; sleep 1 && swaymsg 'focus output $primary'"
# https://major.io/p/sway-dark-mode/
exec "dbus-send --session --dest=org.kde.GtkConfig --type=method_call /GtkConfig org.kde.GtkConfig.setGtkTheme string:Breeze-dark-gtk""
exec "gsettings set org.gnome.desktop.interface gtk-theme Arc-Dark"
