#!/usr/bin/env bash
set -o nounset
set -o errexit
set -o pipefail

# Parse first argument for config switching
case "${1:-}" in
    --astro|--astronvim)
        NVIM_APPNAME="astronvim" exec nvim "${@:2}"
        ;;
    --lazy|--lazyvim)
        NVIM_APPNAME="lazyvim" exec nvim "${@:2}"
        ;;
    --chad|--nvchad)
        NVIM_APPNAME="chadnvim" exec nvim "${@:2}"
        ;;
    --lvim|--lunar|--lunarvim)
        exec lvim "${@:2}"
        ;;
    --list)
        echo "Available neovim configs:"
        echo "  vi [--lvim|--lunar]    LunarVim (default)"
        echo "  vi --astro             AstroNvim"
        echo "  vi --lazy              LazyVim"
        echo "  vi --chad              NvChad"
        exit 0
        ;;
    *)
        # Default to LunarVim
        exec lvim "$@"
        ;;
esac
