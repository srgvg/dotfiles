#!/bin/bash

# c-basic-offset: 4; tab-width: 4; indent-tabs-mode: t
# vi: set shiftwidth=4 tabstop=4 noexpandtab:
# :indentSize=4:tabSize=4:noTabs=false:

set -o nounset
set -o errexit
set -o pipefail

# shellcheck disable=SC1090
source "$HOME/bin/common.bash"

###############################################################################

function execute() {
	args=$1
	output=$(eval $args 2>/dev/null ||:)
}

case ${1:-} in
	audio_current_sink)
		execute "pa-default long | sed -e 's/ - / /' -e '/Built-in.*/d' 2>/dev/null ||:"
		;;
	audio_sonos_volume)
		execute "sonos volume 2>/dev/null ||:"
		if [ -n "${output}" ]
		then
			if [ "${output}" -gt 0 ]
			then
				output="ðŸ”Š${output}% â¸±Sonos"
			else [ "${output}" -eq 0 ]
				output="ðŸš« â¸±Sonos"
			fi
		fi

		;;
	wifi)
		execute "nmcli -t radio wifi"
		if [ "${output}" = "enabled" ]
		then
			output="ï‡«"
		else
			output="âŠ¥"
		fi
		;;
	*)
		notify_error "$(
			echo "Possible options are:";
			grep -e '^[[:space:]].*)' $0 | grep -v '(' | sed -e 's/\s//g' -e 's/\*//'  -e 's/)//')\n"
		output="UNKNOWN ITEM"
		;;
esac

echo -n ${output}
