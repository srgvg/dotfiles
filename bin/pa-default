#!/bin/bash

# c-basic-offset: 4; tab-width: 4; indent-tabs-mode: t
# vi: set shiftwidth=4 tabstop=4 noexpandtab:
# :indentSize=4:tabSize=4:noTabs=false:

set -o nounset
set -o errexit
set -o pipefail


# shellcheck disable=SC1090
source "$HOME/bin/common.bash"

###############################################################################

PA_SINK_DEFAULT_NAME="${PA_SINK_DEFAULT_NAME:-Built-in Audio}"

action=${1:-number}

function get_sink() {
	local action=${1}
	case "${action}" in
		builtin)
			ponymix list | grep -B1 "${PA_SINK_DEFAULT_NAME}" | grep sink | awk '{print $2}'  | sed s/://
			;;
		short)
			ponymix defaults | grep '^sink' | awk '{print $3}'
			;;
		long)
			ponymix defaults | grep -A1 '^sink' | grep -v sink | awk '{$1=$1};1' | head -n1
			;;
		number|*)
			ponymix defaults | grep '^sink' | awk '{print $2}' | sed s/://
			;;
	esac
}

result="$(get_sink ${action})"
echo -n "${result}"
