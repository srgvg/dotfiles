#!/usr/bin/env bash

# c-basic-offset: 4; tab-width: 4; indent-tabs-mode: t
# vi: set shiftwidth=4 tabstop=4 expandtab:
# :indentSize=4:tabSize=4:noTabs=false:

set -o nounset
set -o errexit
set -o pipefail

# shellcheck disable=SC1090
source "$HOME/bin/common.bash"

###############################################################################

function kpatch() {
	local obj
	local ns
	if [ -n "${2:-}" ]
	then
		ns=$1
		obj=$2
		echo kubectl patch --namespace $ns $obj -p \'\{\"metadata\":\{\"finalizers\":null\}\}\' --type=merge ||:
	else
		obj=$1
		echo kubectl patch $obj -p \'\{\"metadata\":\{\"finalizers\":null\}\}\' --type=merge ||:
	fi
}

NS=""

if [ -n "${1:-}" ]
then
	NS="--namespace $1"
fi

# with namespace
for obj in $( finalizers $NS 2>/dev/null | grep -v '^[[:space:]].*' | awk '{print $1"@"$4"/"$2}' | grep -v -e KIND -e NAME )
do
	kpatch ${obj/@/ }
done | sort

echo

# without namespace
for obj in $( finalizers 2>/dev/null | grep '^[[:space:]].*' | awk '{print $3"/"$1}' | grep -v -e KIND -e NAME )
do
	kpatch ${obj}
done | sort

