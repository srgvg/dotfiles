#!/usr/bin/env bash
#set -x

# c-basic-offset: 4; tab-width: 4; indent-tabs-mode: t
# vi: set shiftwidth=4 tabstop=4 noexpandtab:
# :indentSize=4:tabSize=4:noTabs=false:

set -o nounset
set -o errexit
set -o pipefail

# shellcheck disable=SC1090
source "$HOME/bin/common.bash"

#trap info INT TERM EXIT

###############################################################################

OIFS=$IFS
NIFS=$'\n'
IFS=$NIFS

dotadds="
.asdfrc
.bash_completion
.bash_logout
.bash_profile
.bashrc
.bashrc.d/
.config/alacritty/
.config/asdf-plugin-list
.config/broot/
.config/dunst/dunstrc
.config/environment.d/	:!.config/environment.d/50-path.conf
.config/gtk-2.0/
.config/gtk-3.0/
.config/gtk-4.0/
.config/helm/repositories.yaml
.config/helm/repo-list.yaml
.config/htop/
.config/krew-index-list
.config/krew-list
.config/lvim/			:!.config/lvim/lazy-lock.json
.config/mimeapps.list
.config/mise/
.config/nvim/           :!.config/nvim/plugged/           :!.config/nvim/plugged/
.config/pip/
.config/pulse/daemon.conf
.config/ranger/
.config/picom.conf
.config/starship.toml
.config/sway/
.config/systemd/user
.config/remmina			:!.config/remmina/*.remmina
.config/yamlfmt/
.config/yazi/
.local/share/remmina	:!.local/share/remmina/*.remmina
.config/user-dirs.dirs
.default-python-packages
.editorconfig
.gitattributes
.gitconfig
.gitconfig.d/
.gitignore
.gitignore.d/dot
.git-template/
.i3/
.kube/kubie.yaml
.kube/plugin-completion-config/
.local/etc
.local/man/
.local/share/applications/
.local/share/bash-completion
.local/share/broot/
.local/share/direnv/allow/
.local/share/doc/
.local/share/flatpak/ :!.local/share/flatpak/db/
.local/share/icons/
.local/share/nautilus/ :!.local/share/nautilus/tags/
.local/share/nemo/
.pam_environment
.pastebinit.xml
.profile
.screenlayout
.screenrc
.selected_editor
.tigrc
.XCompose
.Xresources
bin/
Applications
Backgrounds
bin
bin2
Desktop
Downloads
Music
PDF
Pictures
Public
Templates
Videos
"

sdotadds="
.azure
.azure.d/ :!.azure.d/*/cliextensions/ :!.azure.d/*/logs/ :!.azure.d/*/commands/ :!.azure.d/*/telemetry.txt .azure.d/*/azureProfile.json :!.azure.d/*/clouds.config :!.azure.d/*/commandIndex.json :!.azure.d/*/msal_http_cache.bin :!.azure.d/*/msal_token_cache.json :!.azure.d/*/versionCheck.json :!.azure.d/*/azureProfile.json
.config/gandi/
.config/mopidy/mopidy.conf
.docker/ :!.docker/buildx/
.aws/
.cert/
.config/doctl/ :!.config/doctl/cache/
.config/gandi/
.config/gcloud/ :!.config/gcloud/*.db :!.config/gcloud/cache/ :!.config/gcloud/logs/ :!.config/gcloud/surface_data/ :!.config/gcloud/.last*
.config/gotify/
.config/hcloud/
.config/mopidy/
.config/scw/
.gitignore.d/sdot
.gnupg/ :!.gnupg/random_seed
.kube/ :!.kube/cache/ :!.kube/config :!.kube/http-cache/ :!.kube/kubie.yaml :!.kube/.switch_tmp/ :!.kube/.switch_history
.local/share/remmina/*.remmina
.s3cfg
.ssh/ :!.ssh/*_known_hosts :!.ssh/known_hosts*
.talos/
.terraform.d/credentials.tfrc.json
bins/
etc/
src/*.sh
$(find $HOME/src/ -name '.envrc' -type f -not -path '*/src/archive*' -not -path '*/src/tmp/*')
"


###############################################################################

function err() {
	echo -e ${echo_bold_red}"\n*** ${*}\n"${echo_white}
}

function dotsadd() {
	cd $HOME

	set +o errexit
	sub "dot"
	for entry in ${dotadds}
	do
		echo EXECUTING vcsh run dot git add --force ${entry}
		IFS=$OIFS
		if ! vcsh run dot git add --force ${entry}
		then
			err=$?
			echo
			title "ERROR ADDING ${entry}"
			exit $err
		fi
		IFS=$NIFS
	done
	echo
	sub "sdot"
	for entry in ${sdotadds}
	do
		echo EXECUTING vcsh run sdot git add --force ${entry}
		IFS=$OIFS
		if ! vcsh run sdot git add --force ${entry}
		then
			err=$?
			echo
			title "ERROR ADDING ${entry}"
			exit $err
		fi
		IFS=$NIFS
	done
	echo
	set -o errexit
}

function title() {
	local msg
	IFS=$OIFS
	msg="${*}"

	echo -e "\n--------------------------------"
	echo -e "${msg} ... "
	echo -e "--------------------------------\n"
	IFS=$NIFS
}

function sub() {
	local msg
	IFS=$OIFS
	msg="${*}"
	echo -e "\n*** ${msg} ... \n"
	IFS=$NIFS
}

function log() {
	local msg
	IFS=$OIFS
	msg="${*}"
	echo -e "${msg} ... "
	IFS=$NIFS
}

function info() {
	title Status
	vcsh foreach status --short --branch --verbose --show-stash
}

function err() {
	echo -e ${echo_bold_red}
	title ${echo_bold_red} ERROR - "$@"
	echo -e ${echo_normal}
}

###############################################################################

cd $HOME

if [ -z "${1:-}" ]
then
	title Usage $0
	echo "up | pull | add | commit | push | all"
	exit
fi

while [ -n "${1:-}" ]
do
	action="${1:-}"
	if [ "${action}" = "up" ] || [ "${action}" = "pull" ] || [ "${action}" = "all" ]
	then
		title Update
		vcsh foreach remote update --prune
	fi
	if [ "${action}" = "add" ] || [ "${action}" = "all" ]
	then
		title Add
		dotsadd
		info
	fi
	if [ "${action}" = "commit" ] || [ "${action}" = "all" ]
	then
		title Committing
		vcsh foreach commit -m "update from $HOSTNAME"
	fi
	if [ "${action}" = "pull" ] || [ "${action}" = "all" ]
	then
		title Pull
		vcsh foreach pull
		info
		if [ $(vcsh foreach diff --name-only --diff-filter=U --relative | grep -v -e dot: -e sdot: | wc -l) -gt 0 ]
		then
			err Merge conflicts detected
			vcsh foreach diff --name-only --diff-filter=U --relative
			exit 1
		fi
	fi
	if [ "${action}" = "push" ] || [ "${action}" = "all" ]
	then
		title Pushing
		vcsh foreach pushall
	fi
	if [ "${action}" = "all" ]
	then
		info
	fi
	shift
done
