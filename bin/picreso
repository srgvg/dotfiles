#!/usr/bin/env bash
set -o nounset
set -o errexit
set -o pipefail

[ -r "$1" ] || exit

reso=$(identify -format "%w %h" "$1" 2> /dev/null)
[ "$?" = 0 ] || exit

w=${reso%%\ *}
h=${reso##*\ }
mp=$(( $w * $h / 1000 ))
ratio=$(( $w / $h ))

printf '%6s' $mp
printf '%3s' "M  "
printf '%12s' ${w}x${h}" "
printf '%s' $(bc <<< "scale=2; $w/$h" )" "
identify "$1"

