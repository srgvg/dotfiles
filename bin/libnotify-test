#!/bin/bash

# c-basic-offset: 4; tab-width: 4; indent-tabs-mode: t
# vi: set shiftwidth=4 tabstop=4 noexpandtab:
# :indentSize=4:tabSize=4:noTabs=false:

set -o nounset
set -o errexit
set -o pipefail


# shellcheck disable=SC1090
source "$HOME/bin/common.bash"

t=1

notify-send -u low          "Don't be bothered $RANDOM" \
                            "There's a man walking down the street"
sleep $t

notify-send -u normal       "Have a look $RANDOM" \
                            "There's a woman walking down the street"
sleep $t

notify-send -u critical     "Watch out! $RANDOM" \
                            "There\'s a hot chick in bikini at your window"
